<div class="alert alert-secondary" role="alert">
    <h4>Datos de Transacción a Eliminar</h4>
</div>

<form class="needs-validation" action="/transactions/delete" method="POST" novalidate>

    <input type="hidden" name="id" value="{{id}}">

    <div class="form-group row">
        <label for="staticEmail" class="font-weight-bold col-sm-2 col-form-label">Fecha</label>
        <div class="col-sm-10">
            <input type="text" readonly class="form-control-plaintext" id="staticEmail" value="{{date}}">
        </div>
    </div>
    <div class="form-group row">
        <label for="staticEmail" class="font-weight-bold col-sm-2 col-form-label">Importe</label>
        <div class="col-sm-10">
            <input type="text" readonly class="form-control-plaintext" id="staticEmail" value="${{amount}}">
        </div>
    </div>
    <div class="form-group row">
        <label for="staticEmail" class="font-weight-bold col-sm-2 col-form-label">Categoría</label>
        <div class="col-sm-10">
            <input type="text" readonly class="form-control-plaintext" id="staticEmail" value="{{transactionItem}}">
        </div>
    </div>
    <div class="form-group row">
        <label for="staticEmail" class="font-weight-bold col-sm-2 col-form-label">Cuenta</label>
        <div class="col-sm-10">
            <input type="text" readonly class="form-control-plaintext" id="staticEmail" value="{{account}}">
        </div>
    </div>
    <div class="form-group row">
        <label for="staticEmail" class="font-weight-bold col-sm-2 col-form-label">Descpripción</label>
        <div class="col-sm-10">
            <input type="text" readonly class="form-control-plaintext" id="staticEmail" value="{{description}}">
        </div>
    </div>


    <div class="row">
        <div class="col-md-12 mb-3">
            <button class="btn btn-outline-danger btn-lg btn-block" type="submit">Eliminar Transacción</button>
        </div>
    </div>
    <hr class="mb-4">
    <div class="row">

        <div class="col-md-6 mb-3">
            <a class="btn btn-outline-primary btn-lg btn-block" href="/transactions/view">Ver todas las
                transacciones</a>
        </div>

        <div class="col-md-6 mb-3">
            <a class="btn btn-outline-secondary btn-lg btn-block" href="/">Ir a Dashboard</a>
        </div>
    </div>
</form>