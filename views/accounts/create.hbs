<div class="alert alert-secondary" role="alert">
    <h4>Creación de cuentas</h4>
</div>

<form class="needs-validation" action="/accounts/register" method="POST" novalidate>
    <div class="row">
        <div class="col-md-4 mb-3">
            <label for="firstName">Nombre</label>
            <input type="text" class="form-control" name="name" placeholder="" required>
            <div class="invalid-feedback">
                Escribe Nombre de la Cuenta.
            </div>
        </div>

        <div class="col-md-2 mb-3">
            <label for="country">Categoría</label>
            <select class="custom-select d-block w-100" name="type" required>
                <option value="">Seleccionar...</option>
                <option>Debit</option>
                <option>Credit</option>
            </select>
            <div class="invalid-feedback">
                Selecciona una categoría.
            </div>
        </div>

        <div class="col-md-2 mb-3">
            <label for="country">Balance Inicial</label>
            <input type="text" class="form-control" name="balance" placeholder="" value="{{type}}" required>
            <div class="invalid-feedback">
                Define Balance Inicial.
            </div>
        </div>
        <div class="col-md-2 mb-3">
            <label for="country">Día de Corte</label>
            <input type="text" class="form-control" name="dueDay" placeholder="" value="{{type}}" required>
            <div class="invalid-feedback">
                Especifica día de corte.
            </div>
        </div>
        <div class="col-md-2 mb-3">
            <label for="country">Día de Pago</label>
            <input type="text" class="form-control" name="paymentDay" placeholder="" value="{{type}}" required>
            <div class="invalid-feedback">
                Especifica día de Pago.
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <a class="btn btn-outline-secondary btn-lg btn-block" href="/">Ir a Dashboard</a>
        </div>
        <div class="col-md-6 mb-3">
            <button class="btn btn-outline-success btn-lg btn-block" type="submit">Registrar Nueva Cuenta</button>
        </div>
    </div>


</form>