<div class="alert alert-secondary" role="alert">
    <h4>Registro de transacciones</h4>
</div>

{{#if show}}
<div class="alert alert-warning alert-dismissible fade show" role="alert">
    <strong>Holy guacamole!</strong> You should check in on some of those fields below.
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
{{/if}}


<form class="needs-validation" action="/transactions/register" method="POST" novalidate>
    <div class="row">
        <div class="col-md-4 mb-3">
            <label for="firstName">Fecha</label>
            <input type="date" class="form-control" name="date" placeholder="" value="{{currentDate}}" required>
            <div class="invalid-feedback">
                Selecciona una fecha.
            </div>
        </div>
        <div class="col-md-2 mb-3">
            <label for="firstName">Importe</label>
            <input type="text" class="form-control" name="amount" placeholder="" value="" required>
            <div class="invalid-feedback">
                Define el importe.
            </div>
        </div>

        <div class="col-md-6 mb-3">
            <label for="country">Categoría</label>
            <select class="custom-select d-block w-100" name="category" required>

                <option value="">Seleccionar...</option>
                {{#each categories}}
                <option>{{this}}</option>
                {{/each}}
            </select>
            <div class="invalid-feedback">
                Selecciona una categoría.
            </div>
        </div>


    </div>

    <div class="row">

        <div class="col-md-3 mb-3">
            <label for="country">Cuenta</label>
            <select class="custom-select d-block w-100" name="account" required>
                <option value="">Seleccionar...</option>
                {{#each accounts}}
                <option>{{ this }}</option>
                {{/each}}
            </select>
            <div class="invalid-feedback">
                Selecciona una cuenta.
            </div>
        </div>
        <div class="col-md-9 mb-3">
            <label for="firstName">Descpripción</label>
            <input type="text" class="form-control" name="description" placeholder="" value="">

        </div>
    </div>

    <div class="row">
        <div class="col-md-12 mb-3">
            <button class="btn btn-outline-success btn-lg btn-block" type="submit">Registrar Transacción</button>
        </div>
    </div>
    <hr class="mb-4">
    <div class="row">

        <div class="col-md-6 mb-3">
            <a class="btn btn-outline-primary btn-lg btn-block" href="/transactions/view">Ver todas las transacciones</a>
        </div>

        <div class="col-md-6 mb-3">
            <a class="btn btn-outline-secondary btn-lg btn-block" href="/">Ir a Dashboard</a>
        </div>
    </div>
</form>