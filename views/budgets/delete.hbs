<div class="alert alert-secondary" role="alert">
    <h4>Datos de Categoría a Eliminar</h4>
</div>

<form class="needs-validation" action="/delete" method="POST" novalidate>

    <input type="hidden" name="id" value="{{budget.id}}">

    <ul class="list-group ">
        <li class="list-group-item">
            <h5>Categoría:</h5>{{budget.category}}
        </li>
        <li class="list-group-item">
            <h5>Monto:</h5>${{budget.amount}}
        </li>
        <li class="list-group-item">
            <h5>Tipo: </h5>{{budget.type}}
        </li>
    </ul>

    <hr class="mb-4">
    <div class="row">
        <div class="col-md-6 mb-3">
            <a class="btn btn-outline-secondary btn-lg btn-block" href="/">Cancelar</a>
        </div>
        <div class="col-md-6 mb-3">
            <button class="btn btn-outline-danger btn-lg btn-block" type="submit">Elimninar</button>
        </div>
    </div>
</form>