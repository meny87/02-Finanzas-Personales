<div class="row">
    <div class="col-md-8 order-md-1">
        <div class="card">
            <h4 class="card-header">
                Ahorro
            </h4>
            <div class="card-body">
                <p>INGRESO TOTAL: ${{summaryInfo.totalIncome}} </p>
                <p>GASTO TOTAL: ${{summaryInfo.totalOutcome}} </p>
                <hr>
                <h5>AHORRO ACTUAL: ${{summaryInfo.totalSaving}}</h5>
                <h1>{{summaryInfo.totalSavingPerc}}%</h1>

            </div>
        </div>
        <br>
        <div class="card">
            <h4 class="card-header">
                Deuda
            </h4>
            <div class="card-body">
                <p>DEBO: ${{summaryInfo.totalIncome}} </p>
                <p>ME DEBEN: ${{summaryInfo.totalOutcome}} </p>
            </div>
        </div>

    </div>
    <div class="col-md-4 order-md-2 mb-4">
        <div class="card">
            <h4 class="card-header">
                Opciones
            </h4>
            <div class="card-body">
                <div class="card">
                    <div class="card-body">
                        <h5>Transacciones</h5>
                        <hr class="mb-4">
                        <a class="btn btn-outline-primary btn-lg btn-block" href="/transactions" role="button">Registrar</a>
                        <a class="btn btn-outline-primary btn-lg btn-block" href="/transactions/view" role="button">Ver
                            Todas</a>
                    </div>
                </div>
                <br>
                <a class="btn btn-outline-primary btn-lg btn-block" href="/transactions/credit" role="button">Pagar
                    Tarjeta de Crédito</a>
                <a class="btn btn-outline-primary btn-lg btn-block" href="/transactions/credit" role="button">Retiro
                    de Efectivo</a>
                <a class="btn btn-outline-primary btn-lg btn-block" href="/transactions/credit" role="button">Administrar
                    Deudas</a>
            </div>
        </div>
    </div>
</div>
</div>

<div class="row">
    <div class="col-md-4 order-md-2 mb-4">
        <div class="card">
            <h4 class="card-header d-flex justify-content-between align-items-center mb-3">
                <span class="text">Cuentas</span>
                <span class="badge badge-secondary badge-pill">{{accountCount}}</span>
                <a href="/accounts/viewAll" class="badge badge-light">
                    <i class="far fa-edit"></i>
                </a>

                <a href="/accounts/create" class="badge badge-light">
                    <i class="far fa-plus-square"></i>
                </a>
            </h4>
            <div class="card-body">
                <p class="card-text">

                    <ul class="list-group mb-3">
                        <li class="list-group-item d-flex justify-content-between bg-light">
                            <div class="text-primary">
                                <h6 class="my-0">EFECTIVO</h6>
                            </div>
                            <span class="text-primary">${{cashSumUp}}</span>
                        </li>

                        {{#cashAccounts}}
                        {{#if this}}
                        <li class="list-group-item d-flex justify-content-between lh-condensed">
                            <div>
                                <h6 class="my-0">

                                    <small class="text-muted">Balance Inicial: ${{formattedBalance}}</small><br>
                                    <small class="text-muted">Gastos del Mes: ${{acmOutcome}}</small><br>
                                    <small class="text-muted">Retiros del Mes: ${{acmIncome}}</small>
                                </h6>
                            </div>
                        </li>
                        {{/if}}
                        {{/cashAccounts}}

                        <li class="list-group-item d-flex justify-content-between bg-light">
                            <div class="text-success">
                                <h6 class="my-0">DÉBITO</h6>
                            </div>
                            <span class="text-success">${{debitSumUp}}</span>
                        </li>

                        {{#debitAccounts}}
                        {{#if this}}
                        <li class="list-group-item d-flex justify-content-between lh-condensed">
                            <div>
                                <h6 class="my-0">
                                    <p>{{name}}</p>

                                    <small class="text-muted">Balance Inicial: ${{formattedBalance}}</small><br>
                                    <small class="text-muted">Gastos del Mes: ${{acmOutcome}}</small><br>
                                    <small class="text-muted">Depósitos del Mes: ${{acmIncome}}</small>
                                </h6>
                            </div>
                            <span class="text-muted">
                                <p>${{totalBalance}}</p>
                            </span>
                        </li>
                        {{/if}}
                        {{/debitAccounts}}


                        <li class="list-group-item d-flex justify-content-between bg-light">
                            <div class="text-warning">
                                <h6 class="my-0">CRÉDITO</h6>
                            </div>
                            <span class="text-warning">-${{creditSumUp}}</span>
                        </li>

                        {{#creditAccounts}}
                        {{#if this}}
                        <li class="list-group-item d-flex justify-content-between lh-condensed">
                            <div>
                                <h6 class="my-0">{{name}}</h6>
                                <small class="text-muted">Vencimiento: {{dueDay}}</small> <br>
                                <small class="text-muted">Pago: {{paymentDay}}</small>
                                <hr>
                                <small class="text-muted">Balance Inicial: ${{formattedBalance}}</small><br>
                                <small class="text-muted">Gastos del Mes: ${{acmOutcome}}</small><br>
                                <small class="text-muted">Depósitos del Mes: ${{acmIncome}}</small>

                            </div>
                            <span class="text-muted">${{totalBalance}}</span>
                        </li>
                        {{/if}}
                        {{/creditAccounts}}

                        <li class="list-group-item d-flex justify-content-between">
                            <span>Total</span>
                            <strong>${{grandTotalBalance}}</strong>
                        </li>
                    </ul>
                </p>
            </div>
        </div>
    </div>

    <div class="col-md-8 order-md-1">
        <div class="alert alert-primary" role="alert">
            <h4 class="text-center">Presupuesto Mensual</h4>
        </div>

        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-auto mr-auto">
                        <h4 class="card-title">Ganancias</h4>
                    </div>
                    <div class="col-auto">
                        <a class="btn btn-outline-dark btn-sm" href="/budgets/create?type=Income" role="button">Agregar</a>
                    </div>
                </div>
            </div>

            <div class="card-body">
                <p class="card-text">
                    <table class="table table-sm">
                        <thead class="table-active">
                            <tr>
                                <th scope="col">Categoría</th>
                                <th scope="col">Previsto</th>
                                <th scope="col">Real</th>
                                <th scope="col">Diferencia</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#inBudgetTable}}
                            {{#if diffNotFormat}}
                            <tr>
                                {{else}}
                            <tr class="table-warning">
                                {{/if}}
                                <th scope="row">{{cat}}</th>
                                <td>${{prev}}</td>
                                <td>${{real}}</td>
                                <td>${{diff}}</td>
                            </tr>
                            {{/inBudgetTable}}

                            <tr>
                                <th>Totales</th>
                                <th>${{summaryInfo.totalInPrev}}</th>
                                <th>${{summaryInfo.totalInReal}}</th>
                                <th>${{summaryInfo.totalInDiff}}</th>
                            </tr>

                        </tbody>
                    </table>
                </p>

            </div>
        </div>

        <br>

        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-auto mr-auto">
                        <h4 class="card-title">Gastos</h4>
                    </div>
                    <div class="col-auto">
                        <a class="btn btn-outline-dark btn-sm" href="/budgets/create?type=Outcome" role="button">Agregar</a>
                    </div>
                </div>
            </div>

            <div class="card-body">


                <p class="card-text">
                    <table class="table table-sm">
                        <thead class="table-active">
                            <tr>
                                <th scope="col">Categoría</th>
                                <th scope="col">Previsto</th>
                                <th scope="col">Real</th>
                                <th scope="col">Diferencia</th>
                                <th scope="col">Restante</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#outBudgetTable}}
                            {{#if alert}}
                            <tr>
                                {{else}}
                            <tr class="table-danger">
                                {{/if}}
                                <th scope="row">{{cat}}</th>
                                <td>${{prev}}</td>
                                <td>${{real}}</td>
                                <td>${{diff}}</td>
                                <td>{{perc}}%</td>
                            </tr>
                            {{/outBudgetTable}}
                            <tr>
                                <th>Totales</th>
                                <th>${{summaryInfo.totalOutPrev}}</th>
                                <th>${{summaryInfo.totalOutReal}}</th>
                                <th>${{summaryInfo.totalOutDiff}}</th>
                                <th></th>
                            </tr>
                        </tbody>
                    </table>
                </p>

            </div>
        </div>

    </div>

    <hr class="mb-4">