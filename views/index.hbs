<!doctype html>
<html lang="en">


<body class="bg-light">

    <div class="container">
        <div class="py-5 text-center">
            <img class="d-block mx-auto mb-4" src="http://www.cdcouncil.com/images/yellowIcon_barGraph.png" alt=""
                width="72" height="72">
            <h2>Finanzas Personales </h2>
            <h4> {{title}}</h4>
            <hr class="mb-4">
            <p class="lead">Periodo : {{period}}</p>
            <hr class="mb-4">

            <div class="card">
                <div class="card-body">
                    <p>INGRESO TOTAL: ${{summaryInfo.totalIncome}} </p>
                    <p>GASTO TOTAL: ${{summaryInfo.totalOutcome}} </p>
                    <hr>
                    <h5>BALANCE: ${{summaryInfo.totalBalance}}</h5>
                </div>
            </div>
        </div>

        <div class="row">

            <div class="col-md-4 order-md-2 mb-4">
                <h4 class="d-flex justify-content-between align-items-center mb-3">
                    <span class="text-muted">Cuentas</span>
                    <a href="/accounts/create" class="badge badge-light"> <i class="far fa-edit"></i></a>

                    <span class="badge badge-secondary badge-pill">{{accountCount}}</span>
                </h4>
                <ul class="list-group mb-3">
                    <li class="list-group-item d-flex justify-content-between bg-light">
                        <div class="text-primary">
                            <h6 class="my-0">EFECTIVO</h6>
                        </div>
                        <span class="text-primary">${{cashAccounts}}</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between bg-light">
                        <div class="text-success">
                            <h6 class="my-0">DÉBITO</h6>
                        </div>
                        <span class="text-success">${{debitSumUp}}</span>
                    </li>

                    {{#debitAccounts}}
                    {{#if this}}
                    <li class="list-group-item d-flex justify-content-between lh-condensed">
                        <div>
                            <h6 class="my-0">
                                <p>{{name}}</p>
                             
                            <small class="text-muted">Balance Inicial: ${{formattedBalance}}</small><br>
                            <small class="text-muted">Gastos del Mes: ${{acmOutcome}}</small><br>
                            <small class="text-muted">Depósitos del Mes: ${{acmIncome}}</small>
                            </h6>
                        </div>
                        <span class="text-muted">
                            <p>${{totalBalance}}</p>
                        </span>
                    </li>
                    {{/if}}
                    {{/debitAccounts}}


                    <li class="list-group-item d-flex justify-content-between bg-light">
                        <div class="text-warning">
                            <h6 class="my-0">CRÉDITO</h6>
                        </div>
                        <span class="text-warning">-${{creditSumUp}}</span>
                    </li>

                    {{#creditAccounts}}
                    {{#if this}}
                    <li class="list-group-item d-flex justify-content-between lh-condensed">
                        <div>
                            <h6 class="my-0">{{name}}</h6>
                            <small class="text-muted">Vencimiento: {{dueDay}}</small> <br>
                            <small class="text-muted">Pago: {{paymentDay}}</small>
                            <hr>
                            <small class="text-muted">Balance Inicial: ${{formattedBalance}}</small><br>
                            <small class="text-muted">Gastos del Mes: ${{acmOutcome}}</small><br>
                            <small class="text-muted">Depósitos del Mes: ${{acmIncome}}</small>
                            
                        </div>
                        <span class="text-muted">${{totalBalance}}</span>
                    </li>
                    {{/if}}
                    {{/creditAccounts}}

                    <li class="list-group-item d-flex justify-content-between">
                        <span>Total</span>
                        <strong>${{totalBalance}}</strong>
                    </li>
                </ul>
            </div>

            <div class="col-md-8 order-md-1">
                <div class="text-center">
                    <div class="alert alert-info" role="alert">
                        <h4>PRESUPUESTO MENSUAL</h4>
                    </div>
                </div>

                <div class="alert alert-success" role="alert">
                    <div class="row">
                        <div class="col-auto mr-auto">
                            <h4> Ganancias </h4>
                        </div>
                        <div class="col-auto">
                            <a href="/budgets/create?type=Income" class="btn btn-outline-success btn-sm">
                                Agregar
                            </a>
                        </div>
                    </div>
                </div>

                <table class="table table-sm">
                    <thead class="table-active">
                        <tr>
                            <th scope="col">Categoría</th>
                            <th scope="col">Previsto</th>
                            <th scope="col">Real</th>
                            <th scope="col">Diferencia</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#inBudgetTable}}
                        {{#if diffNotFormat}}
                        <tr>
                            {{else}}
                        <tr class="table-warning">
                            {{/if}}
                            <th scope="row">{{cat}}</th>
                            <td>${{prev}}</td>
                            <td>${{real}}</td>
                            <td>${{diff}}</td>
                        </tr>
                        {{/inBudgetTable}}

                        <tr>
                            <th>Totales</th>
                            <th>${{summaryInfo.totalInPrev}}</th>
                            <th>${{summaryInfo.totalInReal}}</th>
                            <th>${{summaryInfo.totalInDiff}}</th>
                        </tr>

                    </tbody>
                </table>


                <hr class="mb-4">
                <div class="alert alert-warning" role="alert">
                    <div class="row">
                        <div class="col-auto mr-auto">
                            <h4>Gastos </h4>
                        </div>
                        <div class="col-auto">
                            <a href="budgets/create?type=Outcome" class="btn btn-outline-warning btn-sm">
                                Agregar
                            </a>
                        </div>
                    </div>
                </div>

                <table class="table table-sm">
                    <thead class="table-active">
                        <tr>
                            <th scope="col">Categoría</th>
                            <th scope="col">Previsto</th>
                            <th scope="col">Real</th>
                            <th scope="col">Diferencia</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#outBudgetTable}}
                        {{#if diffNotFormat}}
                        <tr>
                            {{else}}
                        <tr class="table-secondary">
                            {{/if}}
                            <th scope="row">{{cat}}</th>
                            <td>${{prev}}</td>
                            <td>${{real}}</td>
                            <td>${{diff}}</td>
                        </tr>
                        {{/outBudgetTable}}
                        <tr>
                            <th>Totales</th>
                            <th>${{summaryInfo.totalOutPrev}}</th>
                            <th>${{summaryInfo.totalOutReal}}</th>
                            <th>${{summaryInfo.totalOutDiff}}</th>
                        </tr>
                    </tbody>
                </table>

                <hr class="mb-4">

                <a href="/transactions" class="btn btn-primary btn-lg active">
                    Agregar Transacción
                </a>
                <a href="/transactions/view" class="btn btn-primary btn-lg active">
                    Ver Todas las Transacciones
                </a>

            </div>

            <hr class="mb-4">

        </div>
    </div>

    <footer class="my-5 pt-5 text-muted text-center text-small">
        <p class="mb-1">&copy; 2017-2018 Meny</p>
    </footer>
    </div>

    <!-- Bootstrap core JavaScript
    ================================================== -->
